<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="settingsFragment"
            type="com.example.dashcarr.presentation.tabs.settings.SettingsFragment" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#000000">

        <Button
            android:id="@+id/button_new_recording"
            android:layout_width="410dp"
            android:layout_height="67dp"
            android:layout_marginTop="64dp"
            android:background="#000000"
            android:backgroundTint="#000000"
            android:text="@string/new_recording"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:rippleColor="#000000"
            app:strokeColor="#000000" />

        <Button
            android:id="@+id/button_profile_settings"
            android:layout_width="410dp"
            android:layout_height="67dp"
            android:layout_marginTop="128dp"
            android:background="#000000"
            android:backgroundTint="#000000"
            android:text="@string/profile_settings"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:rippleColor="#000000"
            app:strokeColor="#000000" />

        <Button
            android:id="@+id/button_maps_settings"
            android:layout_width="410dp"
            android:layout_height="67dp"
            android:layout_marginTop="192dp"
            android:background="#000000"
            android:backgroundTint="#000000"
            android:text="@string/maps_settings"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:rippleColor="#000000"
            app:strokeColor="#000000" />

        <Button
            android:id="@+id/button_saved_recordings"
            android:layout_width="410dp"
            android:layout_height="67dp"
            android:background="#000000"
            android:backgroundTint="#000000"
            android:text="@string/saved_recordings"
            app:layout_constraintBottom_toTopOf="@+id/button_new_recording"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0"
            app:strokeColor="#000000" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>