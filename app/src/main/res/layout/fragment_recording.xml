<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="RecordingDetailsFragment"
            type="com.example.dashcarr.presentation.tabs.settings.RecordingFragment" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#000000">

        <TextView
            android:id="@+id/textView7"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#000000" />

        <TextView
            android:id="@+id/barText"
            android:layout_width="409dp"
            android:layout_height="27dp"
            android:layout_marginTop="-440dp"
            android:text="______________________________________"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toStartOf="@+id/barText6"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView7" />

        <TextView
            android:id="@+id/barText6"
            android:layout_width="409dp"
            android:layout_height="27dp"
            android:layout_marginTop="-250dp"
            android:text="______________________________________"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toStartOf="@+id/barText"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView7" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="412dp"
            android:layout_height="287dp"
            android:src="@drawable/videopreview"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="-170dp"
            android:text="Elapsed Time :"
            android:textAlignment="center"
            android:textColor="#04CDFF"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toStartOf="@+id/textView7"
            app:layout_constraintTop_toBottomOf="@+id/barText" />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="70dp"
            android:layout_marginEnd="-190dp"
            android:text="Amount of Data :"
            android:textAlignment="center"
            android:textColor="#04CDFF"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toStartOf="@+id/textView7"
            app:layout_constraintTop_toBottomOf="@+id/barText" />

        <TextView
            android:id="@+id/textView11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="120dp"
            android:layout_marginEnd="-168dp"
            android:text="Current Data :"
            android:textAlignment="center"
            android:textColor="#04CDFF"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toStartOf="@+id/textView7"
            app:layout_constraintTop_toBottomOf="@+id/barText" />

        <Button
            android:id="@+id/button7"
            android:layout_width="184dp"
            android:layout_height="89dp"
            android:layout_marginTop="64dp"
            android:text="Stop Recording"
            app:layout_constraintTop_toBottomOf="@+id/barText6"
            tools:layout_editor_absoluteX="113dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>