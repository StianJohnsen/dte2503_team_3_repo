<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="RecordingFragment"
            type="com.example.dashcarr.presentation.tabs.settings.RecordingFragment" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#000000">

        <TextView
            android:id="@+id/textView7"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#000000" />

        <TextView
            android:id="@+id/text_recording"
            android:layout_width="304dp"
            android:layout_height="48dp"
            android:layout_marginStart="52dp"
            android:layout_marginTop="16dp"
            android:ems="10"
            android:text="@string/recording"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/text_bar_recording_1"
            android:layout_width="409dp"
            android:layout_height="27dp"
            android:layout_marginBottom="600dp"
            android:text="@string/bar"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/text_bar_recording_2"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/text_bar_recording_2"
            android:layout_width="409dp"
            android:layout_height="27dp"
            android:layout_marginBottom="400dp"
            android:text="@string/bar"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/text_bar_recording_1"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/text_elapsed_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="56dp"
            android:layout_marginTop="20dp"
            android:textAlignment="center"
            android:textColor="@color/mainBlue"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text_bar_recording_1" />

        <TextView
            android:id="@+id/text_amount_of_data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="56dp"
            android:layout_marginTop="70dp"
            android:text="@string/amount_of_datapoints"
            android:textAlignment="center"
            android:textColor="@color/mainBlue"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text_bar_recording_1" />

        <TextView
            android:id="@+id/text_current_data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="56dp"
            android:layout_marginTop="120dp"
            android:text="@string/current_data"
            android:textAlignment="center"
            android:textColor="@color/mainBlue"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text_bar_recording_1" />

        <Button
            android:id="@+id/button_stop_recording"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/stop_recording"
            android:backgroundTint="@color/red"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginStart="@dimen/margin_padding_size_20"
            android:layout_marginBottom="@dimen/margin_padding_size_20" />

        <Button
            android:id="@+id/button_pause_recording"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/pause_recording"
            android:backgroundTint="@color/yellow"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/button_stop_recording" />

        <Button
            android:id="@+id/button_resume_recording"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/resume_recording"
            android:backgroundTint="@color/blue"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/button_stop_recording"
            android:visibility="gone" />

        <Button
            android:id="@+id/button_delete_recording"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/delete_recording"
            android:backgroundTint="@color/desaturate_red"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginEnd="@dimen/margin_padding_size_20"
            app:layout_constraintBottom_toBottomOf="@id/button_stop_recording" />

        <TextView
            android:id="@+id/unfil_accel_field"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/text_bar_recording_2"
            app:layout_constraintLeft_toLeftOf="@id/text_bar_recording_2"
            android:layout_marginLeft="30dp"
            android:textColor="@color/mainBlue"
            android:textSize="@dimen/text_size_18"
            android:layout_marginTop="15dp"

            />

        <TextView
            android:id="@+id/fil_accel_field"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/unfil_accel_field"
            app:layout_constraintLeft_toLeftOf="@id/unfil_accel_field"
            android:textColor="@color/mainBlue"
            android:textSize="@dimen/text_size_18"
            android:layout_marginTop="15dp" />

        <TextView
            android:id="@+id/unfil_gyro_field"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/fil_accel_field"
            app:layout_constraintLeft_toLeftOf="@id/fil_accel_field"
            android:textColor="@color/mainBlue"
            android:textSize="@dimen/text_size_18"
            android:layout_marginTop="15dp"

            />

        <TextView
            android:id="@+id/fil_gyro_field"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/unfil_gyro_field"
            app:layout_constraintLeft_toLeftOf="@id/unfil_gyro_field"
            android:textColor="@color/mainBlue"
            android:textSize="@dimen/text_size_18"
            android:layout_marginTop="15dp" />

        <TextView
            android:id="@+id/orientation_text_field"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/fil_gyro_field"
            app:layout_constraintLeft_toLeftOf="@id/fil_gyro_field"
            android:textColor="@color/mainBlue"
            android:textSize="@dimen/text_size_18"
            android:layout_marginTop="15dp" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>