<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nav_graph"
    app:startDestination="@id/action_map">
    <fragment
        android:id="@+id/action_map"
        android:name="com.example.dashcarr.presentation.tabs.map.MapFragment"
        android:label="MapFragment" >

    </fragment>
    <fragment
        android:id="@+id/action_dash_cam"
        android:name="com.example.dashcarr.presentation.tabs.dashcam.DashCamFragment"
        android:label="DashCamFragment">

    </fragment>
    <fragment
        android:id="@+id/action_settings"
        android:name="com.example.dashcarr.presentation.tabs.settings.SettingsFragment"
        android:label="SettingsFragment" >
        <action
            android:id="@+id/action_action_settings_to_SavedRecordingsFragment"
            app:destination="@id/action_saved_recordings" />
        <action
            android:id="@+id/action_action_settings_to_ConfigureFragment"
            app:destination="@id/action_configure_recording" />
        <action
            android:id="@+id/action_action_settings_to_sensorFragment"
            app:destination="@id/sensorFragment" />
    </fragment>
    <fragment
        android:id="@+id/action_configure_recording"
        android:name="com.example.dashcarr.presentation.tabs.settings.ConfigureRecordingFragment"
        android:label="ConfigureRecordingFragment">
        <action
            android:id="@+id/action_action_configure_to_SettingsFragment"
            app:destination="@id/action_settings" />
        <action
            android:id="@+id/action_action_configure_to_RecordingFragment"
            app:destination="@id/action_recording" />
    </fragment>
    <fragment
        android:id="@+id/action_recording"
        android:name="com.example.dashcarr.presentation.tabs.settings.RecordingFragment"
        android:label="RecordingFragment">
        <action
            android:id="@+id/action_action_recording_to_SavedRecordingsFragment"
            app:destination="@id/action_saved_recordings" />
    </fragment>
    <fragment
        android:id="@+id/action_saved_recordings"
        android:name="com.example.dashcarr.presentation.tabs.settings.SavedRecordingsFragment"
        android:label="SavedRecordingsFragment" >
        <action
            android:id="@+id/action_action_savedrecordings_to_StatisticsFragment"
            app:destination="@id/action_recordings_statistics" />
        <action
            android:id="@+id/action_action_savedrecordings_to_SettingsFragment"
            app:destination="@id/action_settings" />
        <action
            android:id="@+id/action_action_savedrecordings_to_RecordingDetailsFragment"
            app:destination="@id/action_recording_details">
        </action>
    </fragment>
    <fragment
        android:id="@+id/action_recordings_statistics"
        android:name="com.example.dashcarr.presentation.tabs.settings.RecordingStatisticsFragment"
        android:label="RecordingStatisticsFragment" />
        <action
            android:id="@+id/action_action_statistics_to_SavedRecordingsFragment"
            app:destination="@id/action_saved_recordings" />
    <fragment
        android:id="@+id/action_recording_details"
        android:name="com.example.dashcarr.presentation.tabs.settings.RecordingDetailsFragment"
        android:label="RecordingDetailsFragment">
        <action
            android:id="@+id/action_action_details_to_SavedRecordingsFragment"
            app:destination="@id/action_saved_recordings" />
        <argument
            android:name="selectedFileName"
            app:argType="string" />
    </fragment>
    <fragment
        android:id="@+id/loginFragment"
        android:name="com.example.dashcarr.presentation.authentication.LoginFragment"
        android:label="LoginFragment" >
        <action
            android:id="@+id/action_loginFragment_to_action_map"
            app:destination="@id/action_map"
            app:popUpToInclusive="true"
            app:popUpTo="@id/nav_graph"/>
    </fragment>
    <fragment
        android:id="@+id/action_history"
        android:name="com.example.dashcarr.presentation.tabs.history.HistoryFragment"
        android:label="HistoryFragment" />
    <fragment
        android:id="@+id/action_social"
        android:name="com.example.dashcarr.presentation.tabs.social.SocialFragment"
        android:label="SocialFragment" /><action android:id="@+id/action_global_loginFragment" app:destination="@id/loginFragment"/>
    <fragment
        android:id="@+id/sensorFragment"
        android:name="com.example.dashcarr.presentation.tabs.settings.SensorFragment"
        android:label="SensorFragment" >
        <action
            android:id="@+id/action_sensorFragment_to_sensorInfoFragment"
            app:destination="@id/sensorInfoFragment" />
    </fragment>
    <fragment
        android:id="@+id/sensorInfoFragment"
        android:name="com.example.dashcarr.presentation.tabs.settings.SensorInfoFragment"
        android:label="SensorInfoFragment" />
</navigation>